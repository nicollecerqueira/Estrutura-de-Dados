class SequentialList:
    def __init__(self, max_size):
        # 1. Criação da lista vazia
        self.max_size = max_size
        self.list = []

    # 2. Verificar se a lista está vazia
    def is_empty(self):
        return len(self.list) == 0

    # 3. Verificar se a lista está cheia
    def is_full(self):
        return len(self.list) == self.max_size

    # 4. Obter o tamanho da lista
    def size(self):
        return len(self.list)

    # 5. Obter/modificar o valor do elemento de uma determinada posição na lista
    def get_element(self, position):
        if 0 <= position < len(self.list):
            return self.list[position]
        else:
            raise IndexError("Invalid position")

    def set_element(self, position, value):
        if 0 <= position < len(self.list):
            self.list[position] = value
        else:
            raise IndexError("Invalid position")

    # 6. Inserir um elemento em uma determinada posição
    def insert_element(self, position, value):
        if self.is_full():
            raise OverflowError("List is full")
        if 0 <= position <= len(self.list):
            self.list.insert(position, value)
        else:
            raise IndexError("Invalid position")

    # 7. Retirar um elemento de uma determinada posição
    def remove_element(self, position):
        if 0 <= position < len(self.list):
            del self.list[position]
        else:
            raise IndexError("Invalid position")

    # Função para imprimir a lista (opcional, para facilitar testes)
    def print_list(self):
        print(self.list)

# Testando as operações
if __name__ == "__main__":
    my_list = SequentialList(10)  # Capacidade máxima de 10 elementos

    my_list.insert_element(0, 5)
    my_list.insert_element(1, 10)
    my_list.insert_element(2, 15)
    my_list.print_list()

    print("Elemento na posição 1:", my_list.get_element(1))
    
    my_list.set_element(1, 20)
    print("Novo valor na posição 1:", my_list.get_element(1))
    my_list.print_list()
    
    my_list.remove_element(1)
    my_list.print_list()

    print("Lista está vazia?", "Sim" if my_list.is_empty() else "Não")
    print("Lista está cheia?", "Sim" if my_list.is_full() else "Não")
    print("Tamanho da lista:", my_list.size())
